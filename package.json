{
    "name": "changelog-generator-twig",
    "version": "1.1.0",
    "description": "A changelog generator using twig templates",
    "main": "bin/changelog-generator-twig.js",
    "nyc": {
        "exclude": [
            "test",
            "coverage",
            ".nyc_output"
        ],
        "reporter": [
            "text",
            "text-summary"
        ]
    },
    "scripts": {
        "changelog": "./bin/changelog-generator-twig.js --owner wdes --repo changelog --repoDir ./ --baseCommit c295e8c3244b857b9d22fdd83a80d2f31cc6139b",
        "changelog-file": "npm run --silent changelog > CHANGELOG.md",
        "jshint": "jshint ./",
        "test": "nyc --all mocha --ui tdd",
        "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov",
        "prettier": "prettier --ignore-path ./.prettierignore --write \"*/**/*.js\" \"*.js\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wdes/changelog.git"
    },
    "keywords": [
        "changelog",
        "twig",
        "git",
        "npm-package"
    ],
    "author": {
        "email": "williamdes@wdes.fr",
        "name": "William Desportes",
        "url": "https://william.wdes.fr"
    },
    "license": "MPL-2.0",
    "bugs": {
        "url": "https://github.com/wdes/changelog/issues"
    },
    "homepage": "https://github.com/wdes/changelog#readme",
    "dependencies": {
        "simple-git": "^1.113.0",
        "snack-cli": "^2.0.0",
        "twig": "^1.13.2"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "jshint": "^2.10.2",
        "mocha": "^6.0.2",
        "nyc": "^14.0.0",
        "prettier": "^1.16.4"
    },
    "prettier": {
        "singleQuote": true,
        "proseWrap": "never",
        "trailingComma": "es5",
        "bracketSpacing": true,
        "printWidth": 120
    },
    "bin": {
        "changelog-generator-twig": "bin/changelog-generator-twig.js"
    }
}
